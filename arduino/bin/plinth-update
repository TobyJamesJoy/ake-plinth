#!/bin/sh

## Script to propagate changes made in ../plinth/plinth.ino ##

PLINTH="spectra.cpp spectra.h"
COMMON="ake_common.cpp ake_common.h"
ALL="$PLINTH $COMMON"

echo "Copying all files..." 
for f in $ALL 
do 
	cp -v ../plinth/$f ../ake_common/
done

echo "\nCopying common files..."
for f in $COMMON
do
	cp -v ../plinth/$f ../simple/
done
