#!/bin/sh

## Script to propagate changes made in ../ake_common##

PLINTH="spectra.cpp spectra.h"
COMMON="ake_common.cpp ake_common.h"
ALL="$PLINTH $COMMON"

SCRIPT=$(readlink -f "$0")
SCRIPT_PATH=$(dirname $SCRIPT)

cd $SCRIPT_PATH

echo "Copying all files..." 
for f in $ALL 
do 
	cp -v ../ake_common/$f ../plinth/
done

echo "\nCopying common files..."
for f in $COMMON
do
	cp -v ../ake_common/$f ../simple/
done
