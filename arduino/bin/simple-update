#!/bin/sh

## Script to propagate changes made in ../simple/simple.ino ##

PLINTH="spectra.cpp spectra.h"
COMMON="ake_common.cpp ake_common.h"
ALL="$PLINTH $COMMON"

SCRIPT=$(readlink -f "$0")
SCRIPT_PATH=$(dirname $SCRIPT)

cd $SCRIPT_PATH

echo "Copying common files..."
for f in $COMMON
do
	cp -v ../simple/$f ../ake_common/
	cp -v ../simple/$f ../plinth/
done
